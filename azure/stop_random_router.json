{
  "version": "0.1.0",
  "title": "What is the impact of Stopping one random GoRouter VM?",
  "description": "If a GoRouter's VM is stopped, then what happens to the routing service?",
  "contributions": {
    "reliability": "high",
    "availability": "high",
    "performance": "medium",
    "security": "none"
  },
  "tags": [
    "tls",
    "cloudfoundry",
    "router"
  ],
  "configuration": {
    "turb_verify_ssl": false,
    "turb_api_url": {
      "type": "env",
      "key": "TURBULENCE_URL",
      "default": "https://turbulence:PASSWORD@10.244.0.35:8080"
    },
    "site_to_test": {
      "type": "env",
      "key": "SITE_TO_TEST",
      "default": "https://www.google.com/"
    }
  },
  "steady-state-hypothesis": {
    "title": "Test application responds",
    "probes": [
      {
        "type": "probe",
        "name": "test-app-responds",
        "tolerance": 200,
        "provider": {
          "type": "http",
          "url": "${site_to_test}"
        }
      }
    ]
  },
  "method": [
    {
      "type": "action",
      "name": "stop-router-vm",
      "provider": {
        "type": "python",
        "module": "chaosazure.machine.actions",
        "func": "stop_machines",
        "arguments": {
          "filter": "where resourceGroup=='gieo-sre' and tags.project_name=~'Azure-Chaos-Monkey'"
        }
      },
      "pauses": {
        "after": 1
      }
    }
    ],
  "rollbacks": []
}
