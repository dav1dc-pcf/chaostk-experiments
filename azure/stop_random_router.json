{
  "version": "0.1.0",
  "title": "What is the impact of Stopping one random GoRouter VM?",
  "description": "If a GoRouter's VM is stopped, then what happens to the routing service? Set AZURE_AUTH_LOCATION to the location of your Azure Auth file",
  "contributions": {
    "reliability": "high",
    "availability": "high",
    "performance": "medium",
    "security": "none"
  },
  "tags": [
    "tls",
    "cloudfoundry",
    "router"
  ],
  "configuration": {
    "azure_subscription_id": "azure_subscription_id",
    "site_to_test": {
      "type": "env",
      "key": "SITE_TO_TEST",
      "default": "https://www.google.com/"
    },
    "filter_to_apply": "where resourceGroup=='gieo-sre' and tags.deployment='cf-123ABC' and tags.job='router'"
  },
  "steady-state-hypothesis": {
    "title": "Test application responds",
    "probes": [
      {
        "type": "probe",
        "name": "test-app-responds",
        "tolerance": 200,
        "provider": {
          "type": "http",
          "url": "${site_to_test}"
        }
      }
    ]
  },
  "method": [
    {
      "type": "action",
      "name": "stop-router-vm",
      "provider": {
        "type": "python",
        "module": "chaosazure.machine.actions",
        "func": "stop_machines",
        "arguments": {
          "filter": "${filter_to_apply}"
        }
      },
      "pauses": {
        "after": 1
      }
    }
    ],
  "rollbacks": [
    {
      "type": "action",
      "name": "restart-stopped-router-vm",
      "provider": {
        "type": "python",
        "module": "chaosazure.machine.actions",
        "func": "start_machines",
        "arguments": {
          "filter": "${filter_to_apply}"
        }
      },
      "pauses": {
        "after": 1
      }
    }
  ]
}
